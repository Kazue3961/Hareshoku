<h1><%= @season.name %> の行事とハレ食（行事食）</h1>

<table>
  <thead>
    <tr>
      <th>行事季節</th> <!-- あとで消す -->
      <th>行事日</th>
      <th>行事名</th>
      <th>行事食</th>
      <th>行事説明</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% @events.each do |event| %>
      <tr>
        <td><%= event.season.name %></td>
        <td><%= event.date %></td>
        <td><%= event.name %></td>
        <td><%= event.food %></td>
        <td><%= event.introduction %></td>
        <td><%= attachment_image_tag(@event, :event_image, :size => '300x240', fallback: "no_image.jpg") %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<h2>みんなのハレ食投稿</h2>
<table>
  <thead>
    <tr>
      <th>写真</th>
      <th>投稿日</th>
      <th>行事名</th>
      <th>ハレ食</th>
      <th>投稿文</th>
      <th>いいね</th>
      <th>コメント</th>
    </tr>
  </thead>
  <tbody>
    <% @posts.each do |post| %>

      <tr>
        <td><%= link_to post_path(post) do %>
          <%= attachment_image_tag @post, :food_image, :size => "300x300", fallback: "no_image.jpg" %></td>
        <td><%= post.date %></td>
        <td><%= post.event.name %></td>
        <td><%= post.food %></td>
        <td><%= post.content %></td>
        <td><%= post.favorites.count %></td>
        <td><%= post.comments.count %></td>
        <td>by<%= post.member.name %></td>
        <% end %>
      </tr>
    <% end %>

  </tbody>
</table>


