<h1><%= @member.name %>page</h1>
  <div class="row">
    <div class="profile-icon col-xs-10 col-md-3">
      <%= attachment_image_tag member, :profile_image, fallback: "no_image.jpg" %>
    </div>
    <div class="profile-text col-xs-12 col-md-8">
      <%= member.profile %>
    </div>
  </div>
  <div class="row">
  <div class="profile-menu col-xs-12">
　  <table>
      <% if member_signed_in? && @member.id == current_member.id %>
      <tr>
        <th><%= image_tag "logo-icon" %><%= link_to "投稿したハレ食　", member_path(current_member) %></th>
        <th><%= image_tag "logo-icon" %><%= link_to "いいね・コメントしたハレ食　", post_favorites_path(current_member) %></th>
        <th><%= image_tag "logo-icon" %><%= link_to "プロフィール編集", edit_member_path(current_member) %></th>
      </tr>
      <% elsif %>
      <tr>
        <th></th>
      </tr>
      <% end %>
    </table>
  </div>
</div>