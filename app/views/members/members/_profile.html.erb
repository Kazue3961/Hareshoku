<h1><%= @member.name %>page</h1>
  <div class="row">
    <div class="col-xs-10 col-md-3">
      <%= link_to edit_member_path(@member) do %><%= attachment_image_tag member, :profile_image, fallback: "no_image", class: "profile-img" %><% end %>
    </div>
    <div class="profile-text col-xs-12 col-md-7">
      <%= member.profile %>
    </div>
  </div>
  <%= flash[:notice] %>
  <div class="row">
  <div class="profile-menu col-xs-12">
　  <table>
      <% if member_signed_in? && @member.id == current_member.id %>
      <tr>
        <th><%= image_tag "logo-icon" %><%= link_to "myハレ食　", member_path(current_member) %></th>
        <th><%= image_tag "logo-icon" %><%= link_to "いいねしたハレ食　", post_favorites_path(current_member) %></th>
        <th><%= image_tag "logo-icon" %><%= link_to "新規投稿", new_post_path(current_member) %></th>
      </tr>
      <% elsif %>
      <tr>
        <th></th>
      </tr>
      <% end %>
    </table>
  </div>
</div>


