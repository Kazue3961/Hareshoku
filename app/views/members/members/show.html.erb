<div class="profile-container">
<%= render 'members/members/profile', member: @member %>

  <thead>
    <tr>
      <th>写真</th>
      <th>行事名</th>
      <th>ハレ食</th>
      <th>詳しく</th>
      <th>いいね</th>
      <th>コメント</th>
    </tr>
  </thead>
  <tbody>
    <% @posts.each do |post| %>

      <tr>
        <td><%= link_to post_path(post) do %><%= attachment_image_tag(@post, :food_image, :size => "300x300", fallback: "no_image.jpg") %><% end %></td>
        <td><%= post.event.name %></td>
        <td><%= post.food %></td>
        <td><%= post.content %></td>
        <td><%= post.favorites.count %></td>
        <td><%= post.comments.count %></td>
        <td><%= link_to "編集する", edit_post_path(post), class: "btn btn-primary" %><td>
      </tr>
    <% end %>

  </tbody>
</table>

<%= link_to "新規投稿する", new_post_path, class: "btn btn-primary" %>

