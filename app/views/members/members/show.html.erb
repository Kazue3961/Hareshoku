<div class="container-fluid">
  <div class="row">
    <div class="profile-area col-xs-12">
      <%= render 'members/members/profile', member: @member %>
    </div>

    <div class="mypage-main-area col-xs-12">
      <div class="row">
        <% @member.posts.each do |post| %>
        <div class="post-content col-xs-6 col-md-4">
          <table>
            <tr>
              <th></th><td><%= link_to post_path(post) do %><%= attachment_image_tag(@post, :food_image, fallback: "no_image.jpg") %><% end %></td>
            </tr>
            <tr>
              <th></th><td><%= post.date %></td>
            </tr>
            <tr>
              <th></th><td><%= post.event.name %></td>
            </tr>
            <tr>
              <th></th><td><%= post.food %></td>
            </tr>
            <tr>
              <th></th><td><%= post.content %></td>
            </tr>
            <tr>
              <th></th><td>いいね<%= post.favorites.count %></td>
            </tr>
            <tr>
              <th></th><td>コメント<%= post.comments.count %></td>
            </tr>

            <% if @member == current_member %>
            <tr>
              <th></th><td><%= link_to "編集する", edit_post_path(post) %></td>
              <% end %>
            </tr>
          </table>
        </div>
        <% end %>
      </div>
    </div>

    <div class="actions col-xs-12">
      <% if @member == current_member %>
      <%= link_to "新規投稿する", new_post_path, class: "btn btn-primary" %>
      <% end %>
    </div>

  </div>
</div>

