<h2>投稿一覧</h2>

<table>
  <thead>
    <tr>
      <th>写真</th>
      <th>投稿日</th>
      <th>行事名</th>
      <th>ハレ食</th>
      <th>投稿文</th>
      <th>いいね</th>
      <th>コメント</th>
    </tr>
  </thead>
  <tbody>
    <% @posts.each do |post| %>

      <tr>
        <td><%= link_to post_path(post) do %>
          <%= attachment_image_tag @post, :food_image, :size => "300x300", fallback: "no_image.jpg" %></td>
        <td><%= post.date %></td>
        <td><%= post.event.name %></td>
        <td><%= post.food %></td>
        <td><%= post.content %></td>
        <td><%= post.favorites.count %></td>
        <td><%= post.comments.count %></td>
        <% end %>
      </tr>
    <% end %>

  </tbody>
</table>

